<!-- basic fancybox setup -->
<script type="text/javascript">
	function validateEmail(email) { 
		var reg = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
		return reg.test(email);
	}

	$(document).ready(function() {
	
		// refresh captcha
		$('img#captcha-refresh').click(function() {  
				
			change_captcha();
		});
		 
		function change_captcha()
		{
			document.getElementById('captcha').src="libs/reCaptcha/get_captcha.php?rnd=" + Math.random();
		}
 
 
		$(".modalbox").fancybox({
			'afterClose':function () {
				window.location.reload();
			}
		
		});
		
		$("#contact").submit(function() { return false; });

		
		$("#send").on("click", function(){
			
			var name      	= $("#name").val().replace(/[\|&;\$%@"<>\(\)\+,]/g, "");
			var surname     = $("#surname").val().replace(/[\|&;\$%@"<>\(\)\+,]/g, "");
			var affiliation = $("#affiliation").val().replace(/[\|&;\$%@"<>\(\)\+,]/g, "");
			var emailval    = $("#email").val();
			var ca 			= $("#captcha-code").val();
			
			
			
			var namelen     = name.length;
			var surnamelen  = surname.length;
			var affiliationlen  = affiliation.length;
			var calen  = ca.length;
			var mailvalid   = validateEmail(emailval);
			
			if(mailvalid == false) {
				$("#email").addClass("error");
			}
			else if(mailvalid == true){
				$("#email").removeClass("error");
			}
			
			if(namelen < 2) {
				$("#name").addClass("error");
			}
			else if(namelen >= 2){
				$("#name").removeClass("error");
			}
			
			if(surnamelen < 2) {
				$("#surname").addClass("error");
			}
			else if(surnamelen >= 2){
				$("#surname").removeClass("error");
			}
			
			if(affiliationlen < 2) {
				$("#affiliation").addClass("error");
			}
			else if(affiliationlen >= 2){
				$("#affiliation").removeClass("error");
			}
			
			if(calen < 4) {
				$("#captcha-code").addClass("error");
			}
			else if(calen >= 4){
				$("#captcha-code").removeClass("error");
			}
			
			if(mailvalid == true && namelen >= 2 && surnamelen >= 2 && affiliationlen >= 2 && calen >= 4) {
				// if both validate we attempt to send the e-mail
				// first we hide the submit btn so the user doesnt click twice
				$("#send").replaceWith("<em><strong>sending...</strong></em>");
				
				$.ajax({
					type: 'POST',
					url: 'libs/sendmessage.php',
					data: $("#contact").serialize(),
					success: function(data) {
						if(data == "true") {
							$("#contact").fadeOut("fast", function(){
								$(this).before("<p><strong>Success! Your request has been sent, thank you.</strong></p>");
								
							});
						} else { 
									$("#contact").fadeOut("fast", function(){
										$(this).before("<p><strong>Wrong Captcha code. Please try again.</strong></p>");
									/*
									setTimeout("$.fancybox.close()", 10000);
									location.reload();
									*/
									});
									
								}
					}
				});
			}
		});
	});
</script>


