               	function hide_loader(){
               		var ajax_load = document.getElementById("ajax-loader");
               		ajax_load.style.display = "none";
                 };

               	function loadTabFrame(tab, url) {
               	    //if ($(tab).find("iframe").length == 0) {
						//console.log(tab);
						//console.log(url);
						
						var html = [];
						/* Publicacion manuales desde html, no de fundanet*/
						if(url.search("/sites/default/files/crg") >= 0)	{ 
               	        	html.push('</div><div class="tabIframeWrapper">');
               	        	html.push('<iframe onload="" style="width:750px;border:0px;height:1000px;" class="iframetab" id="ifr" src="' + url + '">Load Failed?</iframe>');
               	        	html.push('</div>');
               	        	$(tab).html(html.join(""));
						}
						else{
							html.push('</div><div class="tabIframeWrapper">');
               	        	html.push('<iframe onload="" style="width:850px;border:0px;height:1250px;" class="iframetab" id="ifr" src="' + url + '">Load Failed?</iframe>');
               	        	html.push('</div>');
               	        	$(tab).html(html.join(""));
						}
						   

			
               	    //}
               	    return false;
               	   
               	}

