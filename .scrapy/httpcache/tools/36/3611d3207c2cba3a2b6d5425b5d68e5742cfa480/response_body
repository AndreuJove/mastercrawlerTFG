	<script type="text/javascript"> 

	function TermDemo(){ document.getElementById("termform").term.value = "homeodomain"; }
	function MotifDemo()
	{ 
		var type = document.getElementById("motifform").motiftype.value;
		if(type == "consensus")
		{
			document.getElementById("motifform").motif.value = 
			"#PATSER/CONSENSUS format:\n" +
			"A |   0   0 100 100   0   0   0   3\nC | 100   0   0   0   0 100 100  90\n" +
			"G |   0   0   0   0   0   0   0   4\nT |   0 100   0   0 100   0   0   3\n"; 
		}
		else if(type == "transfac")
		{
			document.getElementById("motifform").motif.value =
                	"#TRANSFAC format (A,C,G,T):\nDE      motif_name\n01      1      0      0      5\n" + 
                	"02      6      0      0      0\n03      1      0      0      5\n04      5      0      0      1\nXX\n";
		}
		else if(type = "sequence")
		{
			document.getElementById("motifform").motif.value = "TNTGA\n";
		}
	}
	function ProtDemo()
        { 
		document.getElementById("protform").protein.value =
	 	">P0A9E5|FNR_ECOLI (Uniprot)\n" + 
		"MIPEKRIIRRIQSGGCAIHCQDCSISQLCIPFTLNEHELDQLDNIIERKKPIQKGQTLFKAGDELKSLYAIRSGTIKSYTITEQGDEQITGFHLAGDLVGFDAIGSGHHPSFAQALETSM" +
		"VCEIPFETLDDLSGKMPNLRQQMMRLMSGEIKGDQDMILLLSKKNAEERLAAFIYNLSRRFAQRGFSPREFRLTMTRGDIGNYLGLTVETISRLLGRFQKSGMLAVKGKYITIENNDALAQLAGHTRNVA";
 	}
	</script>
