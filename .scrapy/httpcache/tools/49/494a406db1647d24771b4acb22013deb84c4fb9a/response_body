<script type="text/javascript">//<![CDATA[
function changeDD() {
    var x;
    var y;
    x = document.getElementById("cdd").value;
    x = parseInt(x)-1;
    y = document.getElementById("idd").value;
    y = parseInt(y)-imin;
    doChange(x,y);
}

function doChange(x,y) {
    x = parseInt(x);
    y = parseInt(y);
    var w = 5;
    var minwidth = 60;
    var tmpcont = sumcont[y*100+x];
    var tmpboth;
    if(both) {
        tmpboth = sumboth[y*100+x];
    } else {
        tmpboth = 0;
    }
//    tmpcont = 4000;
//    tmpboth = 2000;
    //alert((y*100+x)+" "+tmpcont);
    document.getElementById("green").innerHTML = "<b>"+addCommas(numseqs-tmpcont-tmpboth)+"</b><br />"+(100-100/numseqs*(tmpcont+tmpboth)).toFixed(2)+"%";
    document.getElementById("red").innerHTML = "<b>"+addCommas(tmpcont)+"</b><br />"+(100/numseqs*tmpcont).toFixed(2)+"%";
    if(both) {
        document.getElementById("both").innerHTML = (100/numseqs*tmpboth).toFixed(2)+"%<br />"+"<b>"+addCommas(tmpboth)+"</b>";
    }
    //first line
    if((100/numseqs*tmpboth*w+0.49999) < minwidth) {
        document.getElementById("cb").width = minwidth;
        if((100-100/numseqs*(tmpcont+tmpboth))*w < minwidth/2) {
            document.getElementById("ilb").width = (1+(100/numseqs*tmpboth*w/2+0.49999)).toFixed(0);
            document.getElementById("ig2").width = (((100-100/numseqs*(tmpcont+tmpboth))*w+0.49999).toFixed(0));
        } else {
            document.getElementById("ilb").width = (minwidth/2+0.49999).toFixed(0);
            document.getElementById("ig2").width = (((100-100/numseqs*(tmpcont+tmpboth))*w+0.49999-(minwidth/2)+(100/numseqs*tmpboth*w/2+0.49999)).toFixed(0));
        }
    } else {
        document.getElementById("ig2").width = (((100-100/numseqs*(tmpcont+tmpboth))*w+0.49999).toFixed(0));
        document.getElementById("ilb").width = (minwidth/2+0.49999).toFixed(0);
        document.getElementById("cb").width = ((100/numseqs*tmpboth*w+0.49999).toFixed(0));
    }
    //second line
    document.getElementById("ig").width = (((100-100/numseqs*(tmpcont+tmpboth))*w+0.49999).toFixed(0));
    document.getElementById("ib").width = ((100/numseqs*tmpboth*w+0.49999).toFixed(0));
    document.getElementById("ir").width = ((100/numseqs*tmpcont*w+0.49999).toFixed(0));
    //third line
    var leftr = 0;
    if(tmpboth == 0 && tmpcont == 0) {
        leftr = 2;
    }
    if((100/numseqs*tmpcont*w+0.49999) < minwidth) {
        if((100-100/numseqs*(tmpcont+tmpboth))*w+0.49999 < minwidth) {
            document.getElementById("cg").width = minwidth;
        } else {
            document.getElementById("cg").width = (((100-100/numseqs*(tmpcont+tmpboth))*w+0.49999-(minwidth/2)-leftr+(100/numseqs*tmpcont*w+0.49999)/2).toFixed(0));
        }
        document.getElementById("ib2").width = ((100/numseqs*tmpboth*w+0.49999).toFixed(0));
        document.getElementById("cr").width = minwidth;
    } else {
        if((100-100/numseqs*(tmpcont+tmpboth))*w+0.49999 < minwidth) {
            document.getElementById("cg").width = minwidth;
        } else {
            document.getElementById("cg").width = (((100-100/numseqs*(tmpcont+tmpboth))*w+0.49999-leftr).toFixed(0));
        }
        document.getElementById("ib2").width = ((100/numseqs*tmpboth*w+0.49999).toFixed(0));
        document.getElementById("cr").width = ((100/numseqs*tmpcont*w+0.49999).toFixed(0));
    }
    if(((100-100/numseqs*(tmpcont+tmpboth))*w+0.49999) < minwidth) {
        document.getElementById("ilb2").width = ((100-100/numseqs*(tmpcont+tmpboth))*w/2+0.49999).toFixed(0);
    } else {
        document.getElementById("ilb2").width = (minwidth/2+0.49999).toFixed(0);
    }
}

function addCommas(n) {
    n += '';
    x = n.split('.');
    x1 = x[0];
    x2 = x.length > 1 ? '.' + x[1] : '';
    var rgx = /(\d+)(\d{3})/;
    while (rgx.test(x1)) {
	x1 = x1.replace(rgx, '$1' + ',' + '$2');
    }
    return x1+x2;
}

function changeLogo(img,id) {
    img.src="img/deconseq_logo_"+id+"c.png";
}



