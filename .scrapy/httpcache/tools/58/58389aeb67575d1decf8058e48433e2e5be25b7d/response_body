         <option value="EPS_landscape">EPS_landscape</option>
         <option value="xfig">xfig</option>
         <option value="hpgl">hpgl</option>
         <option value="RTF_old">RTF_old</option>
         <option value="RTF_new">RTF_new</option>
         <option value="ASCII_similarities">ASCII_similarities</option>
         <option value="ASCII_differences">ASCII_differences</option>
         <option value="PICT_portrait">PICT_portrait</option>
