 library(ChromoViz)<br>
 data(svgControl)<br>
 data( exprStemcell)<br>
 cViz( exprStemcell, humanBand, refSp="human")<br><br> 
 ### YOUR OWN DATA<br> 
 fList <- c( "sampleInput.txt" )<br> 
 featureSet <- cViz.loadFiles(fList)<br> 
 cViz(featureSet, humanBnad, refSp="human")</font></i></td> 
