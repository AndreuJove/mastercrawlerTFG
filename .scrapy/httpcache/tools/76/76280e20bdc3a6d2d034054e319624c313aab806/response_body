<script>
$(function () {
	$("#top_search_job_id").click(function(){
		var job_id_val=$("#job_id").val();
		job_id_val=$.trim(job_id_val);
		if(job_id_val==""){
			$("#myModal_job_id").modal("toggle");
			$("#myModal_job_id").on("hidden",function(){$("#job_id").focus();});
			return false;
	     }
		 var reg=/^[0-9]{11,12}$/;
		 if(!reg.test(job_id_val)){
			$("#myModal_job_id_format").modal("toggle");
			$("#myModal_job_id_format").on("hidden",function(){$("#job_id").focus();});
			return false;
		 }
		window.location.href="status.php?job_id="+job_id_val;
	    if(job_id_val.length==12){
		 window.location.href="./status_multi.php?job_id="+job_id_val ;
	    }		
	});
	$("#ref_p").hide();
	$("#ref_span").click(function(){
		if($("#ref_span").hasClass("glyphicon-minus")){
			$("#ref_p").hide();
			$("#ref_span").removeClass("glyphicon-minus");
			$("#ref_span").addClass("glyphicon-plus");
		}else{
			$("#ref_p").show();
			$("#ref_span").removeClass("glyphicon-plus");
			$("#ref_span").addClass("glyphicon-minus");
		}
	});
});
</script>		
