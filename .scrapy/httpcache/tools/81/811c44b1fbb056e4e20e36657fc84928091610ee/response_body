		//table listener
			$(document).ready(function() {
    $("#tablediv")
      .wrap('<div/>')
        .css({'overflow':'hidden',
		'position': 'absolute'})
          .parent()
            .css({
                  'overflow':'hidden',
				  'position': 'absolute',
                  'height':'20%',
                  'width':  '100%',
                  
                 }).resizable({handles: 'n',minHeight: 10})
                    .find('#tablediv')
                      .css({
					 'position': 'absolute',
					'width': '100%',
					'height': '100%',
					'outline': '1px solid #ccc',
					'background': '#444444',
					'overflow' : 'auto'
					  });
  });
  //nodeviewer listener
  $(document).ready(function() {
    $("#nodeviewer")
      .wrap('<div/>')
        .css({'overflow':'hidden',
		'position': 'absolute'})
          .parent()
            .css({
                  'overflow':'hidden',
				  'position': 'absolute',
                  'height':'75%',
                  'width':  '25%',
                  'right': '0'
                 }).resizable({handles: 'w',minWidth: 10})
                    .find('#nodeviewer')
                      .css({
					 'position': 'absolute',
					'width': '100%',
					'height': '100%',
					'outline': '1px solid #ccc',
					'background': '#444444',
					'overflow' : 'auto',
                    'right': '0'
					  });
  });
  
  //option listener
   $(document).ready(function() {
    $("#options").resizable({handles: 'e',minWidth: 10})
