    <script>
    $(document).ready(function(){
      $("#querytxt").autocomplete('/collection1/terms', {             extraParams:{
             'terms.prefix': function() { return $("#querytxt").val();},
             'terms.sort': 'count',
             'terms.fl': 'text',
             'wt': 'velocity',
             'v.template': 'sgst'
           }
         }
      ).keydown(function(e){
        if (e.keyCode === 13){
          $("#search").trigger('submit');
        }
      });

      // http://localhost:8983/solr/collection1/terms?terms.fl=name&terms.prefix=i&terms.sort=count&wt=velocity&v.template=suggest
    });

    </script>

