<body onload="javascript:loadForm(0)">
<script language="JavaScript">

// --------------------------------------------------------------------------------------

function loadForm(tab)
{
    if (tab == 2)
    {    
        TabSelect('T2','S2');
    }
    else if (tab == 3)
    {
        TabSelect('T3','S3');    
    }
    else
    {
        TabSelect('T1','S1');    
    }

}

// --------------------------------------------------------------------------------------

function TabSelect (tab, content)
{
	//--- get tabs and content IDs	
	var Tabs = [document.getElementById('T1'), document.getElementById('T2'), document.getElementById('T3')];
	var Content = [document.getElementById('S1'), document.getElementById('S2'), document.getElementById('S3')];
	
	//--- reset tabs and content
	for (var i = 0; i < Tabs.length; i++)
	{
		Tabs[i].className = 'tab_nonselected';
	}
	
	for (var i = 0; i < Content.length; i++)
	{
		Content[i].style.display = 'none';
	}

	//--- set clicked tab and content
	var tab_obj = document.getElementById(tab);
	var cont_obj = document.getElementById(content);
	tab_obj.className = 'tab_selected';
	cont_obj.style.display = '';
}

// ----------------------------------------------------------------------------
</script>






